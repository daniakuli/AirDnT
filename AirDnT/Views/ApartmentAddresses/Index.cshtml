@model IEnumerable<AirDnT.Models.ApartmentAddress>

@{
    ViewData["Title"] = "Index";
    List<Apartment> aid = TempData["AID"] as List<Apartment>;
    int id = 0;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="ApartmentAddresses" asp-action="Search">
    <p>
        Country: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apartment.DisplayName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if ((id < aid.Count() && item.ApartmentAddressId == aid[id].ApartmentId) || Context.User.IsInRole("Admin"))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => aid[id].DisplayName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ApartmentAddressId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ApartmentAddressId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ApartmentAddressId">Delete</a>
                </td>
            </tr>
                id++;
            }
        }
    </tbody>
</table>
