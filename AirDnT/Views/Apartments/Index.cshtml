<script type="text/template" id="template">
    <div class="apartmentColumn">
        <h4>
            ${displayName}
        </h4>

        <div>
            ${roomsNumber} Rooms
        </div>
        <div>
            ${price}$
        </div>
        <div>
            Available from ${sAvailability}
        </div>
        <div>
            to ${eAvailability}
        </div>
        
        @if (!Context.User.IsInRole("Customer"))
        {
            <div>
                <a href="/Apartments/Edit/${id}">Edit</a> |
                <a href="/Apartments/Details/${id}">Details</a> |
                <a href="/Apartments/Delete/${id}">Delete</a>
            </div>
        }
        @if (Context.User.IsInRole("Customer"))
        {
            <div>
                <a href="/Apartments/Details/${id}">Details</a> |
                <a href="/Apartments/MakeRes/${id}">Make Reservations</a>
            </div>
        }
    </div>
</script>

