@model AirDnT.Models.Apartment

@{
    ViewData["Title"] = "Make Reservation";
}

<h2>Reservation For @Model.DisplayName</h2>

<div>
    <hr />
    @Html.AntiForgeryToken()
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="DisplayName" id="displayName" class="form-control" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomsNumber)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="RoomsNumber" id="rooms" class="form-control" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Price" id="price" class="form-control" readonly />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sAvailability)
        </dt>
        <dd class="col-sm-10">
            <input id="startDate" class="resChangedDate form-control" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.eAvailability)
        </dt>
        <dd class="col-sm-10">
            <input id="endDate" class="resChangedDate form-control resEndDate" />
        </dd>
    </dl>
    <div class="form-group">
        <button id="btnMkRes" class="btn btn-primary">Make Reservation</button>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

