@model AirDnT.Models.Apartment

@{
    ViewData["Title"] = "Make Reservation";
}

<h2>Mak Reservation For Apartment @Model.DisplayName</h2>


<div>
    <hr />
    <form asp-action="MakeReservation" asp-route-id="@Model.ApartmentId">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DisplayName)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="DisplayName" class="form-control" readonly />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoomsNumber)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="RoomsNumber" class="form-control" readonly />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Price" class="form-control" readonly />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.sAvailability)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="sAvailability" id="startDate" class="changedDate form-control" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.eAvailability)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="eAvailability" id="endDate" class="changedDate form-control" />
            </dd>
        </dl>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/checkDate.js"></script>
}
